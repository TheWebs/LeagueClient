<Window x:Class="LeagueClient.MainWindow" ResizeMode="CanMinimize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight"
        SnapsToDevicePixels="True" WindowStyle="None">
  <Grid Width="{StaticResource Width}" Height="{StaticResource Height}">
    <Frame Name="ContentFrame" NavigationUIVisibility="Hidden"/>
    <Button Width="20" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Close_Click">
      <Path Data="M 0 0 L 8 8 M 8 0 L 0 8" Stroke="{StaticResource FontBrush}" IsHitTestVisible="False"/>
    </Button>
    <Button Width="20" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Minimize_Click" Margin="20 0">
      <Path Data="M 0 0 L 10 0" Stroke="{StaticResource FontBrush}" IsHitTestVisible="False"/>
    </Button>
  </Grid>
</Window>
