<Page x:Class="LeagueClient.ClientUI.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:my="clr-namespace:LeagueClient.ClientUI.Controls"
      xmlns:main="clr-namespace:LeagueClient.ClientUI.Main"
      SnapsToDevicePixels="True" Width="{StaticResource Width}" Height="{StaticResource Height}">
  <Page.Resources>
    <Style TargetType="Border" x:Key="TabButton">
      <Setter Property="Padding" Value="5 8"/>
      <!--<Setter Property="Background" Value="{StaticResource Back2Brush}"/>-->
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="TextBlock.TextAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <EventSetter Event="MouseEnter" Handler="Tab_MouseEnter"/>
      <EventSetter Event="MouseLeave" Handler="Tab_MouseLeave"/>
      <EventSetter Event="MouseUp" Handler="Tab_MousePress"/>
      <!--<Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="{StaticResource FontBrush}"
                                TextBlock.FontSize="{TemplateBinding FontSize}" Content="{TemplateBinding Content}" Margin="{TemplateBinding Padding}"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>-->
    </Style>
    <Style TargetType="Border" x:Key="Separator">
      <Setter Property="BorderThickness" Value="1 1 0 0"/>
      <Setter Property="BorderBrush" Value="{StaticResource FontBrush}"/>
      <Setter Property="Opacity" Value=".25"/>
    </Style>
  </Page.Resources>
  <Grid Background="{StaticResource Back2Brush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="20"/>
      <RowDefinition Height="200"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="20"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="20"/>
      <ColumnDefinition Width="150"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="20"/>
    </Grid.ColumnDefinitions>
    <Border Grid.RowSpan="10" Grid.ColumnSpan="10" Background="Transparent" MouseDown="Grid_MouseDown"/>
    <Path Grid.Row="1" Grid.Column="1" Stroke="{StaticResource FontBrush}" Name="Arrows" Data="M 0 0 L 10 8 L 0 16 M 120 0 L 110 8 L 120 16" Margin="15 95 15 0" VerticalAlignment="Top"/>
    <StackPanel Grid.Row="1" Grid.Column="1">
      <Border Style="{StaticResource Separator}" Margin="30 0"/>
      <Border Style="{StaticResource TabButton}" Margin="30 0" Width="90" Name="LogoutTab">
        <TextBlock Foreground="{StaticResource FontBrush}" FontSize="16">Logout</TextBlock>
      </Border>
      <Border Style="{StaticResource Separator}" Margin="15 0"/>
      <Border Style="{StaticResource TabButton}" Margin="30 0" Width="120" Name="PlayTab">
        <TextBlock Foreground="{StaticResource FontBrush}" FontSize="22">Play</TextBlock>
      </Border>
      <Border Style="{StaticResource Separator}" Margin="15 0"/>
      <Border Style="{StaticResource TabButton}" Margin="30 0" Width="90" Name="FriendsTab">
        <TextBlock Foreground="{StaticResource FontBrush}" FontSize="16">Friends</TextBlock>
      </Border>
      <Border Style="{StaticResource Separator}" Margin="30 0"/>
      <Border Style="{StaticResource TabButton}" Margin="30 0" Width="90" Name="ProfileTab">
        <TextBlock Foreground="{StaticResource FontBrush}" FontSize="16">Profile</TextBlock>
      </Border>
      <Border Style="{StaticResource Separator}" Margin="30 0"/>
      <Border Style="{StaticResource TabButton}" Margin="30 0" Width="90" Name="ShopTab">
        <TextBlock Foreground="{StaticResource FontBrush}" FontSize="16">Shop</TextBlock>
      </Border>
      <Border Style="{StaticResource Separator}" Margin="30 0"/>
    </StackPanel>

    <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" ClipToBounds="True" Margin="0 20 0 60" Height="{StaticResource PageHeight}">
      <UniformGrid Rows="4" Margin="0 0 0 0" Name="SlidingGrid">
        <Grid>
          <main:PlaySelectPage x:Name="PlayPage"/>
          <Frame Background="{StaticResource Back2Brush}" Name="SubPageArea" Visibility="Collapsed"/>
        </Grid>

        <ItemsControl Grid.Row="1" Grid.Column="2" Name="GroupList" Grid.RowSpan="2" HorizontalAlignment="Center">
          <!--<StackPanel.Resources>
            <Style TargetType="ItemsControl">
              <Setter Property="ItemTemplate">
                <Setter.Value>
                  <DataTemplate>
                    <my:FriendListItem2 DataContext="{Binding}" MouseUp="Friend_MouseUp" Margin="0 0 10 10"/>
                  </DataTemplate>
                </Setter.Value>
              </Setter>
              <Setter Property="ItemsPanel">
                <Setter.Value>
                  <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                  </ItemsPanelTemplate>
                </Setter.Value>
              </Setter>
            </Style>
          </StackPanel.Resources>-->
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <my:FriendListItem2 DataContext="{Binding}" MouseUp="Friend_MouseUp" Margin="0 0 10 10"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>

        <main:PlayerProfile x:Name="Profile"/>

        <Grid Background="Red">
          <WebBrowser Name="ShopBrowser" />
        </Grid>
      </UniformGrid>
    </Border>

    <Grid Grid.Row="2" Grid.Column="2" VerticalAlignment="Bottom" Margin="0 11">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="239*"/>
        <ColumnDefinition Width="829*"/>
      </Grid.ColumnDefinitions>
      <ItemsControl Name="OpenChats" Grid.ColumnSpan="2">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <my:ChatConversation DataContext="{Binding}" ChatClosed="ChatConversation_ChatClosed" Margin="-160 0 0 0"/>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal" Margin="160 0 0 0"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
      </ItemsControl>
    </Grid>

    <Grid Grid.Row="2" Grid.Column="1" Margin="11">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="40"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="40"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>

      <Border Grid.Row="3" Name="QueuerArea" Margin="-11 0"/>

      <!--<Button Grid.Row="3">Notifications  - 3</Button>-->

      <Image Source="{StaticResource RPIcon}" Width="15" Height="15" HorizontalAlignment="Left" Grid.Row="5"/>
      <Label FontSize="14" Name="RPAmount" VerticalAlignment="Bottom" Content="100000" Margin="17 0 17 0" Grid.Row="5"/>
      <Image Source="{StaticResource IPIcon}" Width="15" Height="15" HorizontalAlignment="Left" Grid.Row="6"/>
      <Label FontSize="14" Name="IPAmount" VerticalAlignment="Bottom" Content="100000" Margin="17 2 0 2" Grid.Row="6"/>
      <Border Grid.Row="7" MouseUp="CurrentStatus_MouseUp" Background="Transparent">
        <Viewbox StretchDirection="DownOnly" Stretch="Uniform" HorizontalAlignment="Left">
          <Label FontSize="16" Name="CurrentStatus" Foreground="{StaticResource ChatBrush}" Content="Online" Padding="0"/>
        </Viewbox>
      </Border>
      <Border Grid.Row="8" MouseUp="CurrentStatus_MouseUp" Background="Transparent">
        <Viewbox StretchDirection="DownOnly" Stretch="Uniform" HorizontalAlignment="Left">
          <Label FontSize="18" Padding="0 0 0 5" Name="NameLabel">master mor</Label>
        </Viewbox>
      </Border>
      <Image Source="C:\Users\Max\AppData\Roaming\MFro\LeagueAssets\img\profileicon\937.png" Grid.Row="9" MouseUp="ProfileIcon_Click" Name="ProfileIcon"/>
    </Grid>

    <my:PopupSelector Grid.RowSpan="10" Grid.ColumnSpan="10" x:Name="Popup" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Opacity="0" Close="Popup_Close"/>
    <Border Grid.ColumnSpan="100" Grid.RowSpan="100" Name="PopupPanel" Background="#4F101010" Visibility="Collapsed"/>
  </Grid>
</Page>
