<UserControl x:Class="LeagueClient.ClientUI.Controls.TeambuilderSoloQueuePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Grid Background="{StaticResource Back1Color}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="15"/>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="15"/>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="15"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="15"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="15"/>
    </Grid.RowDefinitions>
    <Border Background="{StaticResource ForeColor}" Grid.ColumnSpan="5" Margin="4 4 4 0"/>
    <Border Background="{StaticResource Back1Color}" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="3"/>
    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="62,13,58,13" Grid.ColumnSpan="5">Group Found!</TextBlock>
    <Button Grid.Row="2" Grid.Column="1" Click="Accept_Click">Join Group</Button>
    <Button Grid.Row="2" Grid.Column="3" Click="Cancel_Click">Cancel Queue</Button>
  </Grid>
</UserControl>
