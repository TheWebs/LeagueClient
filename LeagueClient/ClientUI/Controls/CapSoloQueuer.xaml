<UserControl x:Class="LeagueClient.ClientUI.Controls.CapSoloQueuer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Grid Width="150" Height="40">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBlock Style="{StaticResource Control}" Grid.Row="0" VerticalAlignment="Center" Margin="3 0">Searching for Group...</TextBlock>
    <Border Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Center" Width="14" Height="14" Margin="2" CornerRadius="8"
            BorderBrush="{StaticResource FontBrush}" BorderThickness="1" SnapsToDevicePixels="True" MouseEnter="Info_Enter" MouseLeave="Info_Leave">
      <Path Data="M 6 3 L 6 2 M 6 5 L 6 10" Stroke="{StaticResource FontBrush}" SnapsToDevicePixels="True"/>
    </Border>
    <TextBlock Style="{StaticResource Control}" Grid.Row="1" VerticalAlignment="Center" Margin="3 0">Time Elapsed:</TextBlock>
    <TextBlock Style="{StaticResource Control}" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3 0"
               Name="ElapsedText"/>
  </Grid>
</UserControl>
