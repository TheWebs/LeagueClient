<UserControl x:Class="LeagueClient.ClientUI.Controls.ReturnToLobbyQueuer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:LeagueClient.ClientUI.Controls">
  <Grid Width="150" Height="40">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBlock Style="{StaticResource Control}" Margin="2">Currenty in lobby</TextBlock>
    <!--<TextBlock Style="{StaticResource Control}" Margin="22 2 2 2" Grid.Row="2">Return to lobby</TextBlock>-->
    <Button Grid.Row="1" Width="18" HorizontalAlignment="Left" Padding="0" Click="Home_Click">
      <Path Width="18" Height="18" Fill="{StaticResource FontBrush}" Data="M 9 3 L 16 8 14 8 14 15 10 15 10 12 8 12 8 15 4 15 4 8 2 8 Z"/>
    </Button>
    <Button Grid.Row="1" Width="18" HorizontalAlignment="Right" Padding="0" Click="Close_Click">
      <Path Data="M 0 0 L 8 8 M 8 0 L 0 8" Stroke="{StaticResource FontBrush}" IsHitTestVisible="False"/>
    </Button>
  </Grid>
</UserControl>
