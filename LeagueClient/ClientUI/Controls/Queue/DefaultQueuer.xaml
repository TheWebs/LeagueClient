<UserControl x:Class="LeagueClient.ClientUI.Controls.DefaultQueuer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Grid Width="150" Height="40">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBlock Style="{StaticResource Control}" Grid.Row="0" VerticalAlignment="Center" Margin="3 0" Name="QueueName"/>
    <TextBlock Style="{StaticResource Control}" Grid.Row="1" VerticalAlignment="Center" Margin="3 0" Name="ElapsedText">In queue for 0:00</TextBlock>
    <Button Padding="3 1" BorderThickness="0" Click="Cancel_Click" Width="16" Height="16" HorizontalAlignment="Right" Grid.Row="1">
      <Path Data="M 0 0 L 8 8 M 8 0 L 0 8" Stroke="{StaticResource FontBrush}" IsHitTestVisible="False"/>
    </Button>
  </Grid>
</UserControl>
