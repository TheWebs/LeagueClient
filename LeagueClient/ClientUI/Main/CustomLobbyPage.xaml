<Page x:Class="LeagueClient.ClientUI.Main.CustomLobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      Width="{StaticResource Width}" Height="{StaticResource PageHeight}">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="250"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Label Background="{StaticResource ForeBrush}" FontSize="16">Game Name</Label>
    <Grid Grid.Row="1" Margin="0 10 0 0" Height="405" VerticalAlignment="Top">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="10"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <Label FontSize="14" Background="{StaticResource ForeBrush}">Blue Team</Label>
      <Label FontSize="14" Background="{StaticResource ForeBrush}" Grid.Column="2">Red Team</Label>
      <StackPanel Grid.Row="2" Background="{StaticResource ForeBrush}" Name="BlueTeam">
      </StackPanel>
      <StackPanel Grid.Row="2" Grid.Column="2" Background="{StaticResource ForeBrush}" Name="RedTeam">
        <Label>Hello</Label>
      </StackPanel>

      <ScrollViewer Name="ChatScroller" Grid.Row="4">
        <RichTextBox Name="ChatHistory" Background="{StaticResource ForeBrush}" BorderThickness="0" IsReadOnly="True"/>
      </ScrollViewer>
      <TextBox Name="SendBox" Grid.Row="6" Margin="0 0 70 0"/>
      <Button Click="Send_Click" IsDefault="True" Grid.Row="6" Margin="0 -2 0 0" HorizontalAlignment="Right" Width="60">Send</Button>
      
      <StackPanel Grid.Row="4" Grid.Column="2" Background="{StaticResource ForeBrush}"/>
      <Button Click="Collapse_Click" Name="CollapseButt" Grid.Row="6" Grid.Column="2" Margin="0 -2 80 0" HorizontalAlignment="Right" Width="70">Collapse</Button>
      <Button Click="Invite_Click" Grid.Row="6" Grid.Column="2" Margin="0 -2 0 0" HorizontalAlignment="Right" Width="70">Invite</Button>
    </Grid>
    <Grid Grid.Column="2" Grid.RowSpan="2"  Margin="10 0 0 0">
      <Grid.RowDefinitions>
        <RowDefinition Height="25"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="150"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Button HorizontalAlignment="Left" Width="115" Click="Quit_Click">Spectate</Button>
      <Button HorizontalAlignment="Right" Width="115" Click="Quit_Click">Quit Game</Button>
      <Label Background="{StaticResource ForeBrush}" Grid.Row="2" FontSize="14">Spectators</Label>

      <ListView Grid.Row="4" Background="{StaticResource ForeBrush}" BorderThickness="0">

      </ListView>
      <Image Grid.Row="6" Source="/Resources/SRiftImage.png"/>
      <Border Background="{StaticResource ForeBrush}" Grid.Row="7" Grid.RowSpan="2"/>
      <Label Grid.Row="7" Name="MapLabel">Summoner's Rift</Label>
      <Label Grid.Row="7" HorizontalAlignment="Right" Name="QueueLabel">Blind Pick</Label>
      <Label Grid.Row="8" Name="ModeLabel">Classic</Label>
      <Label Grid.Row="8" HorizontalAlignment="Right" Name="TeamSizeLabel">5v5</Label>
    </Grid>
  </Grid>
</Page>
