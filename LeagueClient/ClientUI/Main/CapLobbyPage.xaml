<Page x:Class="LeagueClient.ClientUI.Main.CapLobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:my="clr-namespace:LeagueClient.ClientUI.Controls"
      SnapsToDevicePixels="True" Width="{StaticResource Width}" Height="{StaticResource PageHeight}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="248"/>
      <RowDefinition Height="210"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="75"/>
      <ColumnDefinition Width="460"/>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="75"/>
    </Grid.ColumnDefinitions>

    <ItemsControl Height="448" Name="PlayerList" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Margin="0 0 10 10"/>

    <Border Grid.Column="2" Grid.Row="1" BorderBrush="{StaticResource Back1Brush}" BorderThickness="4">
      <my:CapMap x:Name="GameMap"/>
    </Border>

    <Grid Grid.Column="3" Grid.Row="1" Margin="10 0 0 0 ">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Button Content="Invite" HorizontalAlignment="Left" Padding="20 2" Name="InviteButt" Click="InviteButt_Click"/>
    </Grid>

    <Grid Grid.Column="1" Grid.Row="3">
      <Grid.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
          <Setter Property="OverridesDefaultStyle" Value="False"/>
          <Setter Property="Margin" Value="0 0 10 0"/>
          <Setter Property="Padding" Value="20 2"/>
        </Style>
      </Grid.Resources>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>
      
      <Button Content="Quit" Name="QuitButt" Click="QuitButt_Click"/>

      <Button Content="Search for Solo Players" Name="SoloSearchButt" Click="SoloSearchButt_Click" Grid.Column="1"/>
      <Button Content="Find Another Group" Name="FindAnotherButt" Click="FindAnotherButt_Click" Grid.Column="1"/>
      
      <Button Content="Ready" Name="ReadyButt" Click="ReadyButt_Click" HorizontalAlignment="Right" Width="100" Grid.Column="2"/>
    </Grid>

    <Grid Grid.Column="1" Grid.Row="4" Margin="0 10 10 0">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <CheckBox HorizontalAlignment="Right" ToolTip="Auto-Ready" Name="AutoReadyBox" Unchecked="CheckBox_Checked" Checked="CheckBox_Checked">Auto Ready</CheckBox>

    </Grid>

    <ScrollViewer Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" Margin="0 10 0 10" Name="ChatScroller">
      <RichTextBox Name="ChatHistory" Style="{StaticResource Control}"  Background="{StaticResource Back1Brush}" BorderThickness="0" IsReadOnly="True">
        <RichTextBox.Resources>
          <Style TargetType="Paragraph">
            <Setter Property="Margin" Value="0" />
          </Style>
        </RichTextBox.Resources>
      </RichTextBox>
    </ScrollViewer>
    <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" Margin="0 0 70 0" Name="SendBox"/>
    <Button  Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Right" Margin="0 -2 0 0" Width="60" Name="SendButt">Send</Button>

    <my:InvitePopup Grid.RowSpan="5" Grid.ColumnSpan="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Close="InvitePopup_Close" x:Name="InvitePopup" Visibility="Collapsed" Opacity="0"></my:InvitePopup>
    <my:PopupSelector Grid.RowSpan="5" Grid.ColumnSpan="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                      x:Name="Popup" Close="Popup_Close" Visibility="Collapsed" Opacity="0"/>
  </Grid>
</Page>
