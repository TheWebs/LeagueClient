<Page x:Class="LeagueClient.ClientUI.Main.CapLobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:my="clr-namespace:LeagueClient.ClientUI.Controls"
      SnapsToDevicePixels="True">
  <Grid Width="{StaticResource Width}" Height="{StaticResource PageHeight}">
    <Grid.RowDefinitions>
      <RowDefinition Height="75"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="75"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="75"/>
      <ColumnDefinition Width="400"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="75"/>
    </Grid.ColumnDefinitions>
    
    
    <ItemsControl Name="PlayerList" Grid.Row="1" Grid.Column="1" Margin="0 -45"/>

    <!--<Button Grid.Column="3" Width="80" Height="20" Click="Invite_Click">Invite</Button>-->

    <Border Grid.Column="3" Grid.Row="1" BorderBrush="{StaticResource Back1Brush}" BorderThickness="4">
      <my:CapMap x:Name="GameMap"/>
    </Border>

    <Button VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="3" Grid.Row="2" Content="Find Another Group" Padding="20 2"
            Name="FindAnotherButt" Click="FindAnotherButt_Click"/>
    <Button VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="3" Grid.Row="2" Content="Ready" Padding="20 2"
            Name="ReadyButt" Click="ReadyButt_Click">
      <Button.Effect>
        <DropShadowEffect Color="{StaticResource FocusColor}" BlurRadius="30" ShadowDepth="00" x:Name="ReadyGlow"/>
      </Button.Effect>
    </Button>
  </Grid>
</Page>
