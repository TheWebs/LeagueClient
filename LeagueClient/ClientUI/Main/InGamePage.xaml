<Page x:Class="LeagueClient.ClientUI.Main.InGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Width="{StaticResource Width}" Height="{StaticResource PageHeight}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="{StaticResource Back1Brush}" Width="200" Height="50" Grid.Row="1">
      <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Currently In Game</TextBlock>
    </Grid>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Background="{StaticResource ForeBrush}" Width="200" Height="50" Grid.Row="2" Visibility="Collapsed" Name="ReconnectGrid">
      <Button Width="110" Height="25">Reconnect</Button>
    </Grid>
  </Grid>
</Page>
